# Database
POSTGRES_USER=nda_user
POSTGRES_PASSWORD=nda_password
POSTGRES_DB=nda_db
POSTGRES_URL=postgresql://nda_user:nda_password@postgres:5432/nda_db

# Search / Vector
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USER=admin
OPENSEARCH_PASS=admin123
QDRANT_URL=http://localhost:6333
# Object Storage
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
# Embeddings & LLMs
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
SERVICE_PROFILE=local              # options: local, test, fake
USE_TEXTRACT=false                 # true to enable AWS Textract OCR
# LLM orchestration
LLM_PROVIDER=ollama_local          # options: ollama_local, ollama_network, openai
LLM_ENDPOINT=http://ollama:11434
LLM_EXTRACTION_MODEL=    # used when ENABLE_LLM_REFINEMENT=true
ENABLE_LLM_REFINEMENT=false         # set true to let the local LLM fill missing metadata
LLM_REFINER_CONFIDENCE_THRESHOLD=0.6
LLM_REFINER_TIMEOUT=120
# OpenAI Model (REQUIRED if using OpenAI provider)
OPENAI_API_KEY=
OPENAI_MODEL=
# Ollama Model (REQUIRED - no hardcoded defaults)
OLLAMA_MODEL=mistral:7b
# Additional pipeline flags
RERANK_STRATEGY=rrf                 # options: rrf, none (others can be added)
# Optional AWS / S3 overrides (leave blank for local MinIO)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET_RAW=nda-raw
# S3_BUCKET_PROCESSED=nda-processed
# S3_BUCKET_LOGS=nda-logs
# Misc helpers
API_URL=http://localhost:8000
