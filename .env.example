# Database
POSTGRES_USER=nda_user
POSTGRES_PASSWORD=nda_password
POSTGRES_DB=nda_db
POSTGRES_URL=postgresql://nda_user:nda_password@postgres:5432/nda_db

# Search / Vector
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USER=admin
OPENSEARCH_PASS=admin123
QDRANT_URL=http://localhost:6333

# Object Storage
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Embeddings & LLMs
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
SERVICE_PROFILE=local              # options: local, test, fake
USE_TEXTRACT=false                 # true to enable AWS Textract OCR

# LLM orchestration
LLM_PROVIDER=ollama_local          # options: ollama_local, ollama_network, openai
LLM_ENDPOINT=http://ollama:11434
LLM_EXTRACTION_MODEL=             # used when ENABLE_LLM_REFINEMENT=true
ENABLE_LLM_REFINEMENT=false        # set true to let the local LLM fill missing metadata
LLM_REFINER_CONFIDENCE_THRESHOLD=0.6
LLM_REFINER_TIMEOUT=120

# OpenAI Model (REQUIRED if using OpenAI provider)
OPENAI_API_KEY=
OPENAI_MODEL=

# Ollama Model (REQUIRED - no hardcoded defaults)
OLLAMA_MODEL=mistral:7b
OLLAMA_CONVERSATION_MODEL=
OLLAMA_CONTEXT_LENGTH=
OLLAMA_KEEP_ALIVE=24h

# Additional pipeline flags
RERANK_STRATEGY=rrf                 # options: rrf, none (others can be added)

# Optional AWS / S3 overrides (leave blank for local MinIO)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET_RAW=nda-raw
# S3_BUCKET_PROCESSED=nda-processed
# S3_BUCKET_LOGS=nda-logs

# Email Configuration
# SMTP Settings (for sending emails)
EMAIL_SMTP_HOST=mailhog            # SMTP server hostname (mailhog for local dev, smtp.gmail.com for Gmail)
EMAIL_SMTP_PORT=1025               # SMTP port (1025 for MailHog, 587 for TLS, 465 for SSL)
EMAIL_SMTP_USER=                   # SMTP username (optional for MailHog)
EMAIL_SMTP_PASSWORD=               # SMTP password (optional for MailHog)
EMAIL_SMTP_USE_TLS=false            # Use TLS (true/false)

# IMAP Settings (for receiving emails)
EMAIL_IMAP_HOST=                   # IMAP server hostname (e.g., imap.gmail.com)
EMAIL_IMAP_PORT=993                # IMAP port (993 for SSL, 143 for non-SSL)
EMAIL_IMAP_USER=                   # IMAP username
EMAIL_IMAP_PASSWORD=               # IMAP password
EMAIL_IMAP_USE_SSL=true            # Use SSL (true/false)

# Email Sender Settings
EMAIL_FROM_ADDRESS=nda-system@example.com
EMAIL_FROM_NAME=NDA Management System

# Email Poller Settings
EMAIL_POLLER_ENABLED=true          # Enable/disable email polling worker
EMAIL_POLL_INTERVAL=60             # Poll interval in seconds

# Email Security
EMAIL_ENCRYPTION_KEY=               # Base64-encoded Fernet key for password encryption (auto-generated if not set)

# Workflow Configuration
# Camunda BPMN Engine
CAMUNDA_URL=http://camunda:8080    # Camunda REST API URL
CAMUNDA_USERNAME=demo              # Camunda username
CAMUNDA_PASSWORD=demo               # Camunda password

# LLM Review Settings
WORKFLOW_LLM_REVIEW_ENABLED=true   # Enable LLM review of signed NDAs
WORKFLOW_LLM_APPROVAL_THRESHOLD=0.7 # LLM approval confidence threshold (0.0-1.0)

# Cloudflare Tunnel (optional)
# CLOUDFLARE_TUNNEL_TOKEN=
# CLOUDFLARE_DOMAIN_UI=ui.yourdomain.com
# CLOUDFLARE_DOMAIN_API=api.yourdomain.com

# Misc helpers
API_URL=http://localhost:8000
